<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Menus

    <a data-toggle="collapse" href="#dish_menus_new_form">
      Add menu
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.menus.each do |menu| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to menu, menu %>

        <%= link_to menu, method: :delete, data: { confirm: "Do you really want to delete this menu" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_menus_new_form">
        <%= render partial: "dishes/dish_menus_new_form" %>
      </div>
    </div>

  </ul>
</div>

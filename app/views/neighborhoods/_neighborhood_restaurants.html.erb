<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Restaurants

    <a data-toggle="collapse" href="#neighborhood_restaurants_new_form">
      Add restaurant
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @neighborhood.restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to restaurant, restaurant %>

        <%= link_to restaurant, method: :delete, data: { confirm: "Do you really want to delete this restaurant" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="neighborhood_restaurants_new_form">
        <%= render partial: "neighborhoods/neighborhood_restaurants_new_form" %>
      </div>
    </div>

  </ul>
</div>

<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Menus

    <a data-toggle="collapse" href="#restaurant_menus_new_form">
      Add menu
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @restaurant.menus.each do |menu| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to menu, menu %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to menu, method: :delete, data: { confirm: "Do you really want to delete this menu" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="restaurant_menus_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "restaurants/restaurant_menus_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
